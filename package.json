{
  "name": "udomo",
  "author": "Lucas Vinals",
  "license": "GPL-3.0",
  "main": "cluster.js",
  "version": "1.0.0",
  "scripts": {
    "start": "NODE_ENV=development CORES=1 nodemon --inspect --watch ./server -- ./cluster.js",
    "cluster": "yarn run forever:stop && NODE_ENV=production forever start cluster.js",
    "clean": "rimraf ./udomo dump.rdb *.log .com.google* v8* /root/.forever/*.log",
    "copy-views": "mkdir -p ./udomo/views && cp -R ./client/views/**/ ./udomo/views/",
    "copy-images": "mkdir -p ./udomo/images && cp -R ./client/images/* ./udomo/images/",
    "copystatic": "concurrently --raw 'yarn run copy-views' 'yarn run copy-images'",
    "forever:stop": "forever stopall",
    "basicWorkflow": "yarn run clean && yarn run copystatic",
    "build:production": "yarn run basicWorkflow && NODE_ENV=production webpack -p",
    "production": "NODE_ENV=production concurrently --kill-others-on-fail --raw 'yarn run build:production' 'yarn run cluster'",
    "development": "NODE_ENV=development concurrently --kill-others --raw 'yarn start' 'webpack-dev-server'",
    "logs:production": "tail -f ~/.forever/*.log",
    "nsp": "nsp check",
    "snyk-auth": "snyk auth",
    "snyk-test": "snyk test -q",
    "snyk-protect": "snyk protect -q"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvinals/uDomo"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "compression": "^1.6.2",
    "concurrently": "^3.4.0",
    "express": "^4.15.3",
    "forever": "^0.15.3",
    "helmet": "^3.6.1",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "method-override": "^2.3.9",
    "mongoose": "^4.11.1",
    "mongoose-delete": "^0.4.0",
    "ng-annotations": "^1.1.0",
    "nsp": "^2.6.3",
    "snyk": "^1.36.2",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "socket.io-redis": "^5.1.0",
    "uuid": "^3.0.1",
    "ws": "^3.0.0"
  },
  "devDependencies": {
    "@uirouter/angularjs": "^1.0.5",
    "alertifyjs": "^1.10.0",
    "angular": "^1.6.5",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.2.0",
    "eslint-config-strict": "^14.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.0.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.28.0",
    "jquery": "^3.2.1",
    "mocha": "^3.4.2",
    "morgan": "^1.8.2",
    "nodemon": "^1.11.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.1",
    "syntax-error": "^1.3.0",
    "url-loader": "^0.5.8",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1"
  },
  "eslintConfig": {
    "extends": [
      "strict"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "DEVELOPMENT": true,
      "PRODUCTION": true,
      "PORT": true,
      "angular": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "no-process-env": [
        0
      ],
      "no-underscore-dangle": 0,
      "filenames/match-regex": 0,
      "array-element-newline": [
        "error",
        {
          "multiline": true,
          "minItems": 5
        }
      ],
      "id-length": [
        2,
        {
          "min": 2,
          "max": 100,
          "properties": "always",
          "exceptions": [
            "_"
          ]
        }
      ],
      "id-match": [
        2,
        "^([A-Za-z-_$]*|[A-Z][A-Z_]*[A-Z])$",
        {
          "properties": false
        }
      ]
    }
  },
  "snyk": true,
  "optionalDependencies": {
    "bufferutil": "^3.0.2",
    "utf-8-validate": "^3.0.3"
  }
}
